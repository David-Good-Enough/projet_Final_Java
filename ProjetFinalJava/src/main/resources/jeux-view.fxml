<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ynov.collection.controller.JeuxController"
      styleClass="panel">
    <children>
        <!-- Header avec titre -->
        <HBox styleClass="navbar, navbar-dark, bg-primary" VBox.vgrow="NEVER">
            <children>
                <Label text="ðŸŽ® Gestionnaire de Collection de Jeux VidÃ©o"
                       styleClass="h3" style="-fx-text-fill: white;" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Rechercher un jeu..."
                          styleClass="form-control" prefWidth="250" />
                <Button styleClass="btn, btn-light">
                    <graphic>
                        <Label styleClass="glyph-icon, glyph-search"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </HBox>

        <BorderPane VBox.vgrow="ALWAYS">
            <!-- Panneau gauche : Liste des jeux -->
            <left>
                <VBox maxWidth="350" minWidth="300" spacing="10"
                      styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <!-- Barre de recherche et filtres -->
                    <VBox spacing="10" styleClass="panel-body">
                        <Label text="ðŸ” Filtres et Tri"
                               styleClass="h4" />

                        <HBox spacing="10">
                            <Label text="Filtrer:" styleClass="label" />
                            <ChoiceBox fx:id="filterChoiceBox"
                                      prefWidth="120"
                                      styleClass="form-control" />
                        </HBox>

                        <HBox spacing="10">
                            <Label text="Trier par:" styleClass="label" />
                            <ChoiceBox fx:id="sortChoiceBox"
                                      prefWidth="120"
                                      styleClass="form-control" />
                        </HBox>
                    </VBox>

                    <!-- Liste des jeux -->
                    <Label text="ðŸ“š Ma Collection"
                           styleClass="h4" />

                    <ListView fx:id="jeuxListView" VBox.vgrow="ALWAYS"
                              styleClass="list-view">
                        <placeholder>
                            <Label text="Aucun jeu dans votre collection" styleClass="text-muted"/>
                        </placeholder>
                    </ListView>
                </VBox>
            </left>

            <!-- Panneau central : AperÃ§u dÃ©taillÃ© -->
            <center>
                <VBox spacing="15" styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label text="ðŸ‘ï¸ AperÃ§u du Jeu"
                           styleClass="panel-title, h4" />

                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                styleClass="panel-body">
                        <VBox fx:id="jeuPreviewBox" spacing="15" styleClass="card">

                            <!-- En-tÃªte avec jaquette et titre -->
                            <VBox alignment="CENTER" styleClass="card-header">
                                <!-- Jaquette -->
                                <ImageView fx:id="jaquetteImageView"
                                          fitHeight="200" fitWidth="300"
                                          preserveRatio="true"
                                          styleClass="img-thumbnail" />

                                <!-- Titre -->
                                <Label fx:id="previewTitleLabel"
                                       styleClass="h3, card-title" />

                                <!-- Badges -->
                                <HBox alignment="CENTER" spacing="5">
                                    <Label fx:id="previewSupportLabel" styleClass="badge, badge-primary" />
                                    <Label fx:id="previewAnneeLabel" styleClass="badge, badge-secondary" />
                                </HBox>
                            </VBox>

                            <!-- Informations du jeu -->
                            <VBox spacing="10" styleClass="card-body">
                                <GridPane hgap="15" vgap="5">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="100" halignment="RIGHT" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>

                                    <Label text="Ã‰diteur:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                           styleClass="text-muted" />
                                    <Label fx:id="previewEditeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                    <Label text="DÃ©veloppeur:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                           styleClass="text-muted" />
                                    <Label fx:id="previewDeveloppeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <Label text="AnnÃ©e:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                           styleClass="text-muted" />
                                    <Label fx:id="previewAnneeDetailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                    <Label text="Support:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                           styleClass="text-muted" />
                                    <Label fx:id="previewSupportDetailLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                    <Label text="Note Metacritic:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                                           styleClass="text-muted" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                        <Label fx:id="previewNoteLabel" styleClass="badge, badge-warning" />
                                        <ProgressBar fx:id="noteProgressBar" progress="0.75" prefWidth="150"
                                                   styleClass="progress" />
                                    </HBox>
                                </GridPane>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </center>

            <!-- Panneau droit : Formulaire -->
            <right>
                <VBox minWidth="280" prefWidth="320" spacing="15"
                      styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label text="âœï¸ Ajouter/Modifier un Jeu"
                           styleClass="panel-title, h4" />

                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                styleClass="panel-body">
                        <VBox spacing="12" styleClass="form-group">
                            <!-- Titre -->
                            <VBox spacing="5">
                                <Label text="Titre du jeu *" styleClass="b" />
                                <TextField fx:id="titreField" promptText="Ex: The Legend of Zelda"
                                          styleClass="form-control" />
                            </VBox>

                            <!-- Ã‰diteur -->
                            <VBox spacing="5">
                                <Label text="Ã‰diteur *" styleClass="b" />
                                <TextField fx:id="editeurField" promptText="Ex: Nintendo"
                                          styleClass="form-control" />
                            </VBox>

                            <!-- DÃ©veloppeur -->
                            <VBox spacing="5">
                                <Label text="DÃ©veloppeur *" styleClass="b" />
                                <TextField fx:id="developpeurField" promptText="Ex: Nintendo EPD"
                                          styleClass="form-control" />
                            </VBox>

                            <!-- AnnÃ©e -->
                            <VBox spacing="5">
                                <Label text="AnnÃ©e de sortie *" styleClass="b" />
                                <DatePicker fx:id="datePicker" styleClass="form-control" />
                            </VBox>

                            <!-- Support -->
                            <VBox spacing="5">
                                <Label text="Support *" styleClass="b" />
                                <ChoiceBox fx:id="supportChoiceBox" styleClass="form-control" maxWidth="Infinity" />
                            </VBox>

                            <!-- Note Metacritic -->
                            <VBox spacing="5">
                                <Label text="Note Metacritic (optionnel)" styleClass="b" />
                                <TextField fx:id="noteField" promptText="0-100"
                                          styleClass="form-control" />
                            </VBox>

                            <!-- Jaquette -->
                            <VBox spacing="5">
                                <Label text="Jaquette" styleClass="b" />
                                <HBox spacing="5">
                                    <TextField fx:id="jaquetteField" promptText="URL ou chemin"
                                             styleClass="form-control" HBox.hgrow="ALWAYS" />
                                    <Button styleClass="btn, btn-secondary">
                                        <graphic>
                                            <Label styleClass="glyph-icon, glyph-folder-open"/>
                                        </graphic>
                                    </Button>
                                </HBox>
                            </VBox>

                            <!-- Boutons d'action -->
                            <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                                <Button fx:id="addButton" text="Ajouter" maxWidth="Infinity"
                                        styleClass="btn, btn-success">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-plus" />
                                    </graphic>
                                </Button>
                                <Button fx:id="editButton" text="Modifier" maxWidth="Infinity"
                                        styleClass="btn, btn-warning">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-pencil" />
                                    </graphic>
                                </Button>
                                <Button fx:id="deleteButton" text="Supprimer" maxWidth="Infinity"
                                        styleClass="btn, btn-danger">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-trash" />
                                    </graphic>
                                </Button>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </right>
        </BorderPane>

        <!-- Barre de statut -->
        <HBox styleClass="navbar, navbar-light, bg-light" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
            <Label fx:id="statusLabel" text="PrÃªt"
                   styleClass="text-muted" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Jeux dans la collection: " styleClass="text-muted" />
            <Label fx:id="totalJeuxLabel" text="0" styleClass="badge, badge-primary" />
        </HBox>
    </children>
</VBox>
