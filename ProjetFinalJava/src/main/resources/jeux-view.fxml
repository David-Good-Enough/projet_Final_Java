<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="fr.ynov.collection.controller.JeuxController"
      styleClass="panel">
    <children>
        <!-- Header avec titre -->
        <HBox styleClass="panel-heading, panel-primary" VBox.vgrow="NEVER">
            <children>
                <Label text="🎮 Gestionnaire de Collection de Jeux Vidéo" 
                       styleClass="h3" style="-fx-text-fill: white;" />
            </children>
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </HBox>

        <BorderPane VBox.vgrow="ALWAYS">
            <!-- Panneau gauche : Liste des jeux -->
            <left>
                <VBox maxWidth="350" minWidth="300" spacing="10" 
                      styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <!-- Barre de recherche et filtres -->
                    <VBox spacing="10" styleClass="panel-body">
                        <Label text="🔍 Recherche et Filtres"
                               styleClass="h4" />

                        <TextField fx:id="searchField" 
                                  promptText="Rechercher un jeu..." 
                                  styleClass="form-control" />

                        <HBox spacing="10">
                            <ChoiceBox fx:id="filterChoiceBox"
                                      prefWidth="120"
                                      styleClass="form-control" />
                            <ChoiceBox fx:id="sortChoiceBox"
                                      prefWidth="120"
                                      styleClass="form-control" />
                        </HBox>
                    </VBox>

                    <!-- Liste des jeux -->
                    <Label text="📚 Ma Collection" 
                           styleClass="h4" />

                    <ListView fx:id="jeuxListView" VBox.vgrow="ALWAYS" 
                              style="-fx-background-radius: 8;" />
                </VBox>
            </left>

            <!-- Panneau central : Aperçu détaillé -->
            <center>
                <VBox spacing="15" styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <Label text="👁️ Aperçu du Jeu" 
                           styleClass="panel-title" />

                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                styleClass="panel-body">
                        <VBox fx:id="jeuPreviewBox" spacing="15">

                            <!-- Jaquette -->
                            <ImageView fx:id="jaquetteImageView" 
                                      fitHeight="200" fitWidth="300" 
                                      preserveRatio="true" 
                                      styleClass="img-thumbnail" />

                            <!-- Informations du jeu -->
                            <VBox spacing="10">
                                <Label fx:id="previewTitleLabel" 
                                       styleClass="h3" />

                                <GridPane hgap="10" vgap="5">
                                    <Label text="Éditeur:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                                           styleClass="b" />
                                    <Label fx:id="previewEditeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Développeur:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                                           styleClass="b" />
                                    <Label fx:id="previewDeveloppeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Année:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                                           styleClass="b" />
                                    <Label fx:id="previewAnneeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Support:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                                           styleClass="b" />
                                    <Label fx:id="previewSupportLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    
                                    <Label text="Note Metacritic:" GridPane.columnIndex="0" GridPane.rowIndex="4" 
                                           styleClass="b" />
                                    <Label fx:id="previewNoteLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                </GridPane>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </center>

            <!-- Panneau droit : Formulaire -->
            <right>
                <VBox minWidth="280" prefWidth="320" spacing="15" 
                      styleClass="panel, panel-default">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <Label text="✏️ Ajouter/Modifier un Jeu" 
                           styleClass="panel-title" />

                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                styleClass="panel-body">
                        <VBox spacing="12" styleClass="form-group">
                            <!-- Titre -->
                            <VBox spacing="5">
                                <Label text="Titre du jeu *" styleClass="b" />
                                <TextField fx:id="titreField" promptText="Ex: The Legend of Zelda"
                                          styleClass="form-control" />
                            </VBox>
                            
                            <!-- Éditeur -->
                            <VBox spacing="5">
                                <Label text="Éditeur *" styleClass="b" />
                                <TextField fx:id="editeurField" promptText="Ex: Nintendo"
                                          styleClass="form-control" />
                            </VBox>
                            
                            <!-- Développeur -->
                            <VBox spacing="5">
                                <Label text="Développeur *" styleClass="b" />
                                <TextField fx:id="developpeurField" promptText="Ex: Nintendo EPD"
                                          styleClass="form-control" />
                            </VBox>
                            
                            <!-- Année -->
                            <VBox spacing="5">
                                <Label text="Année de sortie *" styleClass="b" />
                                <DatePicker fx:id="datePicker" styleClass="form-control" />
                            </VBox>
                            
                            <!-- Support -->
                            <VBox spacing="5">
                                <Label text="Support *" styleClass="b" />
                                <ChoiceBox fx:id="supportChoiceBox" styleClass="form-control" />
                            </VBox>
                            
                            <!-- Note Metacritic -->
                            <VBox spacing="5">
                                <Label text="Note Metacritic (optionnel)" styleClass="b" />
                                <TextField fx:id="noteField" promptText="0-100"
                                          styleClass="form-control" />
                            </VBox>
                            
                            <!-- Jaquette -->
                            <VBox spacing="5">
                                <Label text="Jaquette" styleClass="b" />
                                <TextField fx:id="jaquetteField" promptText="URL de l'image ou chemin local"
                                          styleClass="form-control" />
                            </VBox>
                            
                            <!-- Boutons d'action -->
                            <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                                <Button fx:id="addButton" text="Ajouter" maxWidth="Infinity"
                                        styleClass="btn, btn-success">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-plus" />
                                    </graphic>
                                </Button>
                                <Button fx:id="editButton" text="Modifier" maxWidth="Infinity"
                                        styleClass="btn, btn-warning">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-pencil" />
                                    </graphic>
                                </Button>
                                <Button fx:id="deleteButton" text="Supprimer" maxWidth="Infinity"
                                        styleClass="btn, btn-danger">
                                    <graphic>
                                        <Label styleClass="glyph-icon, glyph-trash" />
                                    </graphic>
                                </Button>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </right>
        </BorderPane>

        <!-- Barre de statut -->
        <HBox styleClass="panel-footer" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
            <Label fx:id="statusLabel" text="Prêt"
                   styleClass="text-muted" />
        </HBox>
    </children>
</VBox>