<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="fr.ynov.collection.controller.JeuxController"
      style="-fx-background-color: #f8f9fa;">
    <children>
        <!-- Header avec titre -->
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" VBox.vgrow="NEVER">
            <children>
                <Label text="🎮 Gestionnaire de Collection de Jeux Vidéo" 
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <BorderPane VBox.vgrow="ALWAYS">
            <!-- Panneau gauche : Liste des jeux -->
            <left>
                <VBox maxWidth="350" minWidth="300" spacing="10" 
                      style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 0 1 0 0;">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <!-- Barre de recherche et filtres -->
                    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8;">
                        <Label text="🔍 Recherche et Filtres" 
                               style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        
                        <TextField fx:id="searchField" 
                                  promptText="Rechercher un jeu..." 
                                  style="-fx-background-radius: 6;" />
                        
                        <HBox spacing="10">
                            <ChoiceBox fx:id="filterChoiceBox"

                                      prefWidth="120" />
                            <ChoiceBox fx:id="sortChoiceBox"
                                      prefWidth="120" />
                        </HBox>
                    </VBox>

                    <!-- Liste des jeux -->
                    <Label text="📚 Ma Collection" 
                           style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                    
                    <ListView fx:id="jeuxListView" VBox.vgrow="ALWAYS" 
                              style="-fx-background-radius: 8;" />
                </VBox>
            </left>

            <!-- Panneau central : Aperçu détaillé -->
            <center>
                <VBox spacing="15" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <Label text="👁️ Aperçu du Jeu" 
                           style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                    
                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                style="-fx-background: transparent;">
                        <VBox fx:id="jeuPreviewBox" spacing="15" 
                              style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                            
                            <!-- Jaquette -->
                            <ImageView fx:id="jaquetteImageView" 
                                      fitHeight="200" fitWidth="300" 
                                      preserveRatio="true" 
                                      style="-fx-background-radius: 8;" />
                            
                            <!-- Informations du jeu -->
                            <VBox spacing="10">
                                <Label fx:id="previewTitleLabel" 
                                       style="-fx-font-weight: bold; -fx-font-size: 20px;" />
                                
                                <GridPane hgap="10" vgap="5">
                                    <Label text="Éditeur:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                                           style="-fx-font-weight: bold;" />
                                    <Label fx:id="previewEditeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Développeur:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                                           style="-fx-font-weight: bold;" />
                                    <Label fx:id="previewDeveloppeurLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Année:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                                           style="-fx-font-weight: bold;" />
                                    <Label fx:id="previewAnneeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Support:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                                           style="-fx-font-weight: bold;" />
                                    <Label fx:id="previewSupportLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    
                                    <Label text="Note Metacritic:" GridPane.columnIndex="0" GridPane.rowIndex="4" 
                                           style="-fx-font-weight: bold;" />
                                    <Label fx:id="previewNoteLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                </GridPane>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </center>

            <!-- Panneau droit : Formulaire -->
            <right>
                <VBox minWidth="280" prefWidth="320" spacing="15" 
                      style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 0 0 0 1;">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    
                    <Label text="✏️ Ajouter/Modifier un Jeu" 
                           style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                    
                    <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                                style="-fx-background: transparent;">
                        <VBox spacing="12">
                            <!-- Titre -->
                            <VBox spacing="5">
                                <Label text="Titre du jeu *" style="-fx-font-weight: bold;" />
                                <TextField fx:id="titreField" promptText="Ex: The Legend of Zelda" 
                                          style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Éditeur -->
                            <VBox spacing="5">
                                <Label text="Éditeur *" style="-fx-font-weight: bold;" />
                                <TextField fx:id="editeurField" promptText="Ex: Nintendo" 
                                          style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Développeur -->
                            <VBox spacing="5">
                                <Label text="Développeur *" style="-fx-font-weight: bold;" />
                                <TextField fx:id="developpeurField" promptText="Ex: Nintendo EPD" 
                                          style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Année -->
                            <VBox spacing="5">
                                <Label text="Année de sortie *" style="-fx-font-weight: bold;" />
                                <DatePicker fx:id="datePicker" style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Support -->
                            <VBox spacing="5">
                                <Label text="Support *" style="-fx-font-weight: bold;" />
                                <ChoiceBox fx:id="supportChoiceBox" style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Note Metacritic -->
                            <VBox spacing="5">
                                <Label text="Note Metacritic (optionnel)" style="-fx-font-weight: bold;" />
                                <TextField fx:id="noteField" promptText="0-100" 
                                          style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Jaquette -->
                            <VBox spacing="5">
                                <Label text="Jaquette" style="-fx-font-weight: bold;" />
                                <TextField fx:id="jaquetteField" promptText="URL de l'image ou chemin local" 
                                          style="-fx-background-radius: 6;" />
                            </VBox>
                            
                            <!-- Boutons d'action -->
                            <VBox spacing="8" style="-fx-padding: 15 0 0 0;">
                                <Button fx:id="addButton" text="➕ Ajouter" 
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 6;" />
                                <Button fx:id="editButton" text="✏️ Modifier" 
                                        style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-background-radius: 6;" />
                                <Button fx:id="deleteButton" text="🗑️ Supprimer" 
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 6;" />
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </right>
        </BorderPane>

        <!-- Barre de statut -->
        <HBox style="-fx-background-color: #343a40; -fx-padding: 8;" VBox.vgrow="NEVER">
            <Label fx:id="statusLabel" text="Prêt" 
                   style="-fx-text-fill: white; -fx-font-style: italic;" />
        </HBox>
    </children>
</VBox>